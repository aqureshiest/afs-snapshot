{
  "*": "stage",
  "redirectOnFullSubmission": "actions/navigate.homebase",
  "stage": {
    "*": "stage.view",
    "stageKey": {
      "@": "get-rates"
    },
    "stageLabel": {
      "@": "Current Address"
    },
    "analytics":"actions/analytics/full-refi/cosigner.syllabus-page-event",
    "stageLayout": {
      "*": "stage/layout",
      "header": [
        {
          "*": "stage/layout/header.logo",
          "action": "actions/navigate.homebase"
        }
      ]
    },
    "bottomNavigation": {
      "*": "stage.bottom-navigation",
      "buttons": [
        {
          "*": "actions.conditional",
          "if": {
            "*": "conditionals.applicant-incomplete"
          },
          "else": {
            "*": "actions.with-copy",
            "copy": {
              "@": "Send reminder to primary"
            },
            "action": {
              "*": "actions/request",
              "manifest": "actions/reminders/student-loan-refi",
              "analytics": "analytics/full-refi.syllabus-reminder-action"
            }
          },
          "then": {
            "*": "actions.with-copy",
            "copy": {
              "@": "Finish my application"
            },
            "action": {
              "*": "actions/navigate",
              "goTo": "earnest-student-loan-refi/urls.basic-info"
            }
          }
        }
      ]
    },
    "stageContent": [
      {
        "*": "flexible-content/items/header",
        "copy": {
          "@": "Your application at a glance"
        },
        "subCopy": {
          "@": "Youâ€™re almost done with submitting your full application - send your primary an reminder to finish their portion."
        }
      },
      {
        "*": "flexible-content/items/progress-card",
        "label": {
          "@": "Cosigner's info"
        },
        "componentProps": {
          "*": "earnest-student-loan-refi/pages/syllabus.progress-card-status",
          "as": {"@": "cosigner"},
          "completedStatus": {
            "*": "asset/local",
            "icon": "asset/local/icons.green-check"
          }
        },
        "containerProps": {
          "@": {
            "marginTop": "24px"
          }
        }
      },
      {
        "*": "flexible-content/items/progress-card",
        "label": {
          "@": "Primary's info"
        },
        "componentProps": {
          "*": "earnest-student-loan-refi/pages/syllabus.progress-card-status",
          "completedStatus": {
            "*": "asset/local",
            "icon": "asset/local/icons.green-check"
          }
        }
      }
    ]
  }
}
