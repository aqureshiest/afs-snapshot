{{#if (or (notNull application.primary.cognitoID) (notNull application.primary.monolithUserID))}}
{
  "plaidMethod": "createLinkToken",
  "id": "{{{request.params.id}}}",
  "payload": {
    {{#if application.primary.reference.cognitoID}}
      "userId": "{{{application.primary.reference.cognitoID}}}"
    {{else}}
      "userId": "{{{application.primary.reference.monolithUserID}}}"
    {{/if}}
  }
}
{{else if auth.artifacts.userId}} 
{
  "plaidMethod": "createLinkToken",
  "id": "{{{request.params.id}}}",
  "payload": {
    "userId": "{{{auth.artifacts.userId}}}"
  }
}
{{/if}}