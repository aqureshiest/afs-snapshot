{
  "type": "object",
  "properties": {
    "previous-address-step": {
      "type": "object",
      "properties": {
        "sixMonthResidence": {
          "type": "string",
          "enum": ["true", "false"],
          "errorMessage": {
            "enum": "Select an option"
          }
        }
      },
      "allOf": [{
        "if": {
          "properties": {
            "sixMonthResidence": {
              "const": "true"
            }
          }
        },
        "then": {
          "properties": {
            "currentAddress": {{{json (contract 'current-address-validation')}}}
          }
        }
      }, {
        "if": {
          "properties": {
            "sixMonthResidence": {
              "const": "false"
            }
          }
        },
        "then": {
          "properties": {
            "currentAddress": {{{json (contract 'current-address-validation')}}},
            "previousAddress": {{{json (contract 'previous-address-validation') }}}
          }
        }
      }]
    }
  }
}