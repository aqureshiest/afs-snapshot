
{{#if application.id}}
{
  "action": {
    "key": "submitInterstitial",
    "type": "interstitial",
    "properties": {
      "showSpinner": true,
      "header": { "copy": "Weâ€™re reviewing your application. This can take up to a minute." },
      "actionDelay": 5000,
      "action":
      {{#if (eq application.status.name 'approved')}}
        {{{json (contract 'rateApproved')}}}
      {{else if (eq application.status.name 'declined')}}
        {{{json (contract 'rateDeclined')}}}
      {{else if (eq application.status.name 'frozen')}}
        {{{json (contract 'rateFrozen')}}}
      {{else if (reachedTimeout userState.rate-requested-at 55000) }}
        {{!-- Set timeout to 55 seconds, accounts for initial 5 second delay from initial Decision request post --}}
        {{{json (contract 'rateUnable')}}}
      {{else}}
        {{!-- TODO: Default to rate unable if rate estimate status != 'approved' | 'declined' | 'frozen' --}}
        {{{json (contract 'statusAction')}}}
      {{/if}}
    }
  }
}
{{else}}
  null
{{/if}}