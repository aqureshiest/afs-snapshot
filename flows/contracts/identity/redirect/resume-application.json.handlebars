{{#if request.params.id }}
  {{#if (hasValues applicationState) }}
    {{#with applicationState }}
      {{#if step}}
        "{{manifest}}?step={{step}}"
      {{else}}
        "{{manifest}}"
      {{/if}}
    {{/with}}
  {{else}}
    "{{application.brand}}/{{application.product}}/{{application.id}}"
  {{/if}}
{{/if}}
