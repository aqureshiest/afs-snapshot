{{!
  Minimal lookup query for an application based on id or refId
}}
{{#multiline raw=true~}}
query Application($id: String, $refId: Int, $root: Boolean = false) {
  application(id: $id, refId: $refId root: $root) {
    id
    refId
    href
    tag {
      status
      applicants
    }
    details {
      amount {
        requested
      }
    }
    reference {
      product
      brand
    }
    applicants {
      id
      details {
        name {
          first
          last
        }
      }
      relationships {
        id
        relationship
      }
    }
    primary {
      id
    }
    cosigner {
      id
    }
  }
}
{{~/multiline}}

