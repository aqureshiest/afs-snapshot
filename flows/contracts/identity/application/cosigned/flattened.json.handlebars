{{#with (contract 'application') as |application|}}
  {{#obj}}
    {{#if (eq application.primary.id ../request.params.id)}}
      { "applicant": { {{#spread}}  {{{ json application.primary }}} {{/spread}} "role": "primary" }  }
    {{else if (eq application.cosigner.id ../request.params.id)}}
      { "applicant": { {{#spread}}  {{{ json application.cosigner }}} {{/spread}} "role": "cosigner" }  }
    {{/if}}
    {{{ json application }}}
  {{/obj}}
{{else}}
  null
{{/with}} 
