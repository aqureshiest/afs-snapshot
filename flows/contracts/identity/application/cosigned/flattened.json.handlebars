{{#with (contract 'application') as |application|}}
  {{#obj}}
    {{#if (eq application.primary.id ../request.params.id)}}
      { "applicant": { "role": "primary", {{#spread leadingComma=false trailingComma=false}}  {{{ json application.primary }}} {{/spread}} } }
    {{else if (eq application.cosigner.id ../request.params.id)}}
      { "applicant": { "role": "cosigner", {{#spread leadingComma=false trailingComma=false}}  {{{ json application.cosigner }}} {{/spread}} } }
    {{/if}}
    {{{ json application }}}
  {{/obj}}
{{else}}
  null
{{/with}} 
