fragment Applicant on Application {
  status {
    name
    asOf
  }
  details {
    name {
      first
      last
    }
    location {
      street1
      street2
      city
      state
      zip
      type
    }
  }
  reference {
    monolithApplicationID
  }
}

fragment Root on Application {
  createdAt
  reference {
    monolithLoanID
    product
    brand
  }
  details {
    amount {
      requested
      approved
      certified
    }
  }
  monolithLoanID
}

query Applications($criteria: [ApplicationSearchCriteria]!, $limit: Int, $page: Int) {
  applications(criteria: $criteria, limit: $limit, page: $page) {
    id
    createdAt
    href
    tag {
      active
      applicants
      status
    }
    details {
      email
    }
    ...Applicant
    relationships {
      id
      relationship
      ...Applicant
      ...Root
    }
    root {
      id
    }
  }
}
