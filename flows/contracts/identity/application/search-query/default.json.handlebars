{{#multiline raw=true~}}
  query Applications($criteria: [ApplicationSearchCriteria]!, $limit: Int, $page: Int) {
    applications(criteria: $criteria, limit: $limit, page: $page) {
     id
     href
     tag {
       active
       applicants
       status
     }
     status {
       name
       asOf
     }
     details {
       name {
         first
         last
       }
     }
     reference {
       monolithApplicationID
     }
     root {
       id
       createdAt
       href
       status {
         name
         asOf
       }
       details {
         amount {
           requested
         }
       }
       reference {
         monolithLoanID
       }
     }
   }
  }
{{~/multiline}}
