{{#with application.cosigner}}
{
  "type": "input",
  "definition": {
      "key": "school-undergraduate",
      "type": "inputSchool",
      "status": {{{json (contract 'cosigner_school_input_status')}}},
      {{! TODO: request school name based on opeid from accredited-school-service}}
      "value": "{{{details.education.0.opeid}}}",
      "label": {
          "copy": "Undergraduate school"
      },
      "conditional": [
        [{
          "field": "refi-degree.degree-type",
          "op": "valueEquals",
          "value": "undergraduate"
        }],
        [{
          "field": "editEducationInfo.degree-type",
          "op": "valueEquals",
          "value": "undergraduate"
        }]
      ]
  }
}
{{/with}}