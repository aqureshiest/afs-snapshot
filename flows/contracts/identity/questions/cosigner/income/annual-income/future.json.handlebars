{{#with application.cosigner}}
{
  "type": "input",
  "definition": {
      "key": "annualIncomeFuture",
      "type": "inputMoney",
      {{#if details.income.0.amount}}
        "value": {{formatCentsToDollars details.income.0.amount}},
      {{else}}
        "value": "",
      {{/if}}
      "status": {{{json (contract 'cosigner_income_annual_income_input_status')}}},
      "label": {
        "copy": "Future individual annual gross income"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ]
      ],
      "error": "{{{ ajv 'errors' 'questions/cosigner/income/amount/annual-income' details.income.0.amount }}}",
      "hint": "This could include wage income, bonuses, and commissions, subject to verification later."
  }
}
{{/with}}