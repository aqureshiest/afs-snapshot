{{#if application.cosigner}}
{{#with application.cosigner}}
{
    "type": "input",
    "definition": {
        "key": "graduationDate",
        "type": "inputDate",
        "status": {{{json (contract 'cosigner_gradDate_input_status')}}},
        "value": 
          {{#if details.education.0.graduationDate}}
          {
            "month": "{{month details.education.0.graduationDate}}",
            "day": "{{day details.education.0.graduationDate}}",
            "year": "{{year details.education.0.graduationDate}}"
          }
          {{else}}
          {
            "month": "",
            "day": "",
            "year": ""
          }
          {{/if}}
        ,
        "label": {
          "copy": "Graduation Date"
        },
        "error": "{{{ ajv 'errors' 'questions/cosigner/graduationDate' details.education.0.graduationDate }}}"
    }
}
{{/with}}
{{else}}
{
    "statusCode": "401",
    "message": "Application Cosigner missing"
}
{{/if}}