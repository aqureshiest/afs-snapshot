{{#with application}}
{
    "type": "input",
    "definition": {
        "key": "email",
        "type": "inputEmail",
        "placeholder": "Email",
        "status": {{{json (contract 'primary_email_input_status')}}},
        "value": "{{{ primary.details.email }}}",
        "label": {
            "copy": "Email"
        },
        "analyticsEvents": {
            "onBlur": {
                "type": "identify",
                "properties": {
                    "application_id": "{{{id}}}",
                    "primary_application_id": "{{{primary.id}}}"
                }
            }
        },
        "error": "{{{ajv 'errors' 'questions/primary/email' primary.details.email}}}",
        "hint": "Weâ€™ll use this email to share updates about this application, our products, and our services. Enter email to agree."
    }
}
{{/with}}