{{#with application}}
{
    "type": "input",
    "definition": {
        "key": "amount",
        "type": "inputMoney",
        "direction": "column",
        {{#if details.amount.requested}}
            "value": {{formatCentsToDollars details.amount.requested}},
        {{else}}
            "value": "",
        {{/if}}
        "status": {{{json (contract 'primary_amount_input_status')}}},
        {{#if (eq (stateFromAddress application.primary.details.location) "NM")}}
            "error": "{{{ ajv 'errors' 'questions/primary/amount/schemas/nm' details.amount.requested }}}"
        {{else if (eq (stateFromAddress application.primary.details.location) "CA")}}
            "error": "{{{ ajv 'errors' 'questions/primary/amount/schemas/ca' details.amount.requested }}}"
        {{else}}
            "error": "{{{ ajv 'errors' 'questions/primary/amount/schemas' details.amount.requested }}}"
        {{/if}},
        "label": {
            "copy": "Estimated refinance amount"
        },
        "hint": "Your refinance amount must be greater than or equal to {{{ formatToUSCurrency (stateMinLoan primary.details.location) 'true' }}}",
        "inputProps": {
            "decimalScale": 0
        }
    }
}
{{/with}}