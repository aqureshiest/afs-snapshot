{{#with application}}
{
    "type": "input",
    "definition": {
        "key": "amount",
        "type": "inputMoney",
        "direction": "column",
        {{#if details.amount.requested}}
            "value": "{{formatCentsToDollars details.amount.requested}}",
        {{else}}
            "value": "",
        {{/if}}
        "status": {{{json (contract 'primary_amount_input_status')}}},
        "error": "{{{ ajv 'errors' 'questions/primary/amount' details.amount.requested }}}",
        "label": {
            "copy": "Estimated refinance amount"
        },
        "hint": "Your refinance amount must be greater than or equal to {state minimum amount}",
        "inputProps": {
            "decimalScale": 0
        }
    }
}
{{/with}}