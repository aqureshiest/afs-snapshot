{{#with application.primary}}
{
  "type": "input",
  "condtional": [
    [
      {
        "field": "employment.employment", {{! field is stepKey.fieldKey}}
        "op": "valueEquals",
        "value": "employed"
      }
    ],
    [
      {
        "field": "employment.employment", {{! field is stepKey.fieldKey}}
        "op": "valueEquals",
        "value": "self_employed"
      }
    ],
    [
      {
        "field": "employment.employment", {{! field is stepKey.fieldKey}}
        "op": "valueEquals",
        "value": "future"
      }
    ],
    [
      {
        "field": "employment.employment", {{! field is stepKey.fieldKey}}
        "op": "valueEquals",
        "value": "retired"
      },
      {
        "field": "addtional-income.additional-income",
        "op": "valueEquals",
        "value": "true"
      }
    ],
    [
      {
        "field": "employment.employment", {{! field is stepKey.fieldKey}}
        "op": "valueEquals",
        "value": "unemployed"
      },
      {
        "field": "consistent-Income.consistentIncome",
        "op": "valueEquals",
        "value": "true"
      }
    ]
  ],
  "definition": {
      "key": "amount",
      "type": "inputIncome",
      "value": {
        "amount": "{{{json details.income.2.amount}}}"
      },
      "status": {{{json (contract 'primary_income_additional_income_input_status')}}},
      "label": {
          "amount": {
            "copy": "Total annual additional income (optional)"
          }
      },
      "error": "{{{ ajv 'errors' 'questions/primary/income/amount/additional-income' details.income.2.amount }}}"
  }
}
{{/with}}