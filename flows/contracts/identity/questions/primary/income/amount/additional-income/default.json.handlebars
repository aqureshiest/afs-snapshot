{{#with application.primary}}
{
  "type": "input",
  "definition": {
    "key": "additionalAmount",
    "type": "inputMoney",
    {{#if details.income.2.amount}}
      "value":  "{{{formatCentsToDollars details.income.2.amount}}}",
    {{else}}
      "value": "",
    {{/if}}
    "status": {{{json (contract 'primary_income_additional_income_input_status')}}},
    "label": {
      "copy": "Total annual additional income (optional)"
    },
    "error": "{{{ ajv 'errors' 'questions/primary/income/amount/additional-income' details.income.2.amount }}}",
    "conditional": [
      [
        {
          "field": "employmentStatus.employmentType", 
          "op": "valueEquals",
          "value": "employed"
        }
      ],
      [
        {
          "field": "employmentStatus.employmentType", 
          "op": "valueEquals",
          "value": "self_employed"
        }
      ],
      [
        {
          "field": "employmentStatus.employmentType", 
          "op": "valueEquals",
          "value": "future"
        }
      ],
      [
        {
          "field": "employmentStatus.employmentType", 
          "op": "valueEquals",
          "value": "retired"
        },
        {
          "field": "additionalIncome.addAddtionalIncome",
          "op": "valueEquals",
          "value": "true"
        }
      ],
      [
        {
          "field": "employmentStatus.employmentType", 
          "op": "valueEquals",
          "value": "unemployed"
        },
        {
            "field": "consistentIncome.hasConsistentIncome", 
            "op": "valueEquals",
            "value": "true"
        }
      ]
    ]
  }
}
{{/with}}