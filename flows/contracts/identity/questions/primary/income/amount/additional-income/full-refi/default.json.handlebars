    "status": {{{json (contract 'primary_income_additional_income_input_status')}}},
    "error": "{{{ ajv 'errors' 'questions/primary/income/amount/additional-income/full-refi' additionalAmount }}}",
    "label": {
      "copy": "Total annual additional income (optional)"
    }
  }
}
{{/with}}