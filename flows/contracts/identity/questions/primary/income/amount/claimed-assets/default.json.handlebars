{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "claimedAssets",
      "type": "inputMoney",
      {{#if details.asset.0.amount}}
        "value":  {{formatCentsToDollars details.asset.0.amount}},
      {{else}}
        "value": "",
      {{/if}}
      "status": {{{json (contract 'primary_income_claimed_assets_input_status')}}},
      "label": {
        "copy": "Cash + retirement + investments"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType",
            "op": "valueEquals",
            "value": "retired"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType",
            "op": "valueEquals",
            "value": "unemployed"
          }
        ]
      ],
      "error": "{{{ ajv 'errors' 'questions/primary/income/amount/claimed-assets' details.asset.0.amount }}}",
      "hint": "Including this can help us evaluate your financial stability leading to potentially lower rates."
  }
}
{{/with}}