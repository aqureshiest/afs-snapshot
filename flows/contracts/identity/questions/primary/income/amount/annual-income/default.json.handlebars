{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "annualIncome",
      "type": "inputMoney",
      {{#if details.income.0.amount}}
        "value": {{formatCentsToDollars details.income.0.amount}},
      {{else}}
        "value": "",
      {{/if}}
      "label": {
        "copy": "Annual individual income before taxes"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType",
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType",
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType",
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType",
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType",
            "op": "valueEquals",
            "value": "retired"
          }
        ]
      ],
      "hint": "This could include wage income, bonuses, and commissions, subject to verification later."
  }
}
{{/with}}