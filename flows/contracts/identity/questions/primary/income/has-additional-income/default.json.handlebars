{{#with application.primary}}
{
    "type": "input",
    "definition": {
        "key": "addAdditionalIncome",
        "type": "inputRadio",
        "layout": "copyWithIcon",
        "direction": "row",
        {{#if ../userState.addAdditionalIncome}}
            "value": "{{{../userState.addAdditionalIncome}}}",
        {{else}}
            "value": "",
        {{/if}}
        "items": [
            {
                "id": "yes",
                "label": "Yes",
                "value": "true"
            },
            {
                "id": "no",
                "label": "No",
                "value": "false"
            }
        ],
        "status": {{{json (contract 'primary_retired_has_additional_income_status')}}},
        "error": "{{{ ajv 'errors' 'questions/primary/income/has-additional-income' addAdditionalIncome }}}"
    }
}
{{/with}}
