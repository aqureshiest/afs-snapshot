{{#with application.primary}}
{
    "type": "input",
    "definition": {
        "key": "addAdditionalIncome",
        "type": "inputRadio",
        "layout": "copyWithIcon",
        "direction": "row",
        {{#if ../userState.addAdditionalIncome}}
            "value": "{{{../userState.addAdditionalIncome}}}",
        {{else}}
            "value": "",
        {{/if}}
        "items": [
            {
                "id": "yes",
                "label": "Yes",
                "value": "true"
            },
            {
                "id": "no",
                "label": "No",
                "value": "false"
            }
        ],
        "conditional": [
            [
                {
                    "field": "editEmploymentInfo.employmentType",
                    "op": "valueEquals",
                    "value": "retired"
                }
            ]

        ],
        "label": {
            "copy": "Any additional income you'd like to include?"
        },
        "hint": ":IconWithText[:props[{ icon: 'LightBulbIcon', text: 'What is additional income?'}]] \n\n Any income in addition to a primary job, such as rental income, social security, pension, etc. You can also enter alimony, child support, or separate maintenance income but itâ€™s not required. "
    }
}
{{/with}}
