{
  "type": "object",
  "properties": {
    "month": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "pattern": "^(1[012]|0?[1-9])$",
      "errorMessage": {
        "minLength": "Month is required",
        "maxLength": "Invalid month",
        "pattern": "Invalid date",
        "type": "Date is required"
      }
    },
    "day": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2,
      "pattern": "^(([0]?[1-9])|([1-2][0-9])|(3[01]))$",
      "errorMessage": {
        "minLength": "Day is required",
        "maxLength": "Invalid day",
        "pattern": "Invalid date",
        "type": "Date is required"
      }
    },
    "year": {
      "type": "string",
      "minLength": 4,
      "maxLength": 4,
      "pattern": "^(19|20)\\d{2}$",
      "errorMessage": {
        "minLength": "Year is required",
        "maxLength": "Invalid year",
        "pattern": "Invalid date",
        "type": "Date is required"
      }
    }
  },
  "required": ["month", "year"]
}