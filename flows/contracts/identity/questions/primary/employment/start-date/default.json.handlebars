{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "startDate",
      "type": "inputDate",
      "value": 
        {{#if details.income.0.start}}
        {
          "month": "{{month details.income.0.start}}",
          "day": "{{day details.income.0.start}}",
          "year": "{{year details.income.0.start}}"
        }
        {{else}}
        {
          "month": "",
          "day": "",
          "year": ""
        }
        {{/if}}
      ,
      "label": {
        "copy": "Start date"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ]
      ]
  }
}
{{/with}}