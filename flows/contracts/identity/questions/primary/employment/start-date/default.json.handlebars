{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "startDate",
      "type": "inputDate",
      "status": {{{json (contract 'primary_income_start_date_input_status')}}},
      "value": {
        {{#if details.income.0.start}}
          "month": "{{month details.income.0.start}}",
          "day": "{{day details.income.0.start}}",
          "year": "{{year details.income.0.start}}"
        {{/if}}
      },
      "label": {
        "copy": "Start date"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ]
      ],
      "error": "{{{ ajv 'errors' 'questions/primary/employment/start-date'  details.income.0.start }}}"
  }
}
{{/with}}