{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "employerName",
      "type": "inputText",
      "value": "{{{details.income.0.employer}}}",
      "label": {  
        "copy": "Employer name"
      },
      "conditional": [
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "employmentStatus.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "editEmploymentInfo.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ]
      ]
  }
}
{{/with}}