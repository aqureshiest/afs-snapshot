{{#with application.primary}}
{
  "type": "input",
  "definition": {
      "key": "jobTitle",
      "type": "inputText",
      "placeholder": "Job title",
      "value": "{{{details.income.0.title}}}",
      "status": {{{json (contract 'primary_income_job_title_input_status')}}},
      "label": {  
        "copy": "Job title"
      },
      "conditional": [
        [
          {
            "field": "incomeSource.employmentType", 
            "op": "valueEquals",
            "value": "employed"
          }
        ],
        [
          {
            "field": "incomeSource.employmentType", 
            "op": "valueEquals",
            "value": "self_employed"
          }
        ],
        [
          {
            "field": "incomeSource.employmentType", 
            "op": "valueEquals",
            "value": "future"
          }
        ]
      ],
      "error": "{{{ ajv 'errors' 'questions/primary/employment/job-title' details.income.0.title}}}"
  }
}
{{/with}}
