{{#with application.primary}}
{
    "type": "input",
    "definition": {
        "key": "phone",
        "type": "inputPhone",
        "status": {{{json (contract 'primary_phone_input_status')}}},
        "value": "{{details.phone.0.number}}",
        "label": {
            "copy": "Phone number"
        },
        "error": "{{{ ajv 'errors' 'questions/primary/phone' details.phone }}}",
        "hint": "We'll only use your phone number for updates on your loan application. Learn more about our policy."
    }
}
{{/with}}