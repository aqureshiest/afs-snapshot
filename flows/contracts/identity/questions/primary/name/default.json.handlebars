{{#with application.primary}}
{
    "type": "input",
    "definition": {
        "key": "name",
        "type": "inputName",
        "placeholders": {
            "first": "First name",
            "last": "Last name"
        },
        "status": {{{json (contract 'primary_name_input_status')}}},
        {{#if details.name}}
            "value": {{{json details.name}}},
        {{else}}
            "value": "",
        {{/if}}
        "label": {
            "copy": "Full legal name"
        },
        "error": "{{{ ajv 'errors' 'questions/primary/name' details.name }}}"
    }
}
{{/with}}
