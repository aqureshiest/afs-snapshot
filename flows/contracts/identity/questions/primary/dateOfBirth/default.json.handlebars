{{#if application.primary}}
{{#with application.primary}}
{
    "type": "input",
    "definition": {
        "key": "dateOfBirth",
        "type": "inputDate",
        "status": {{{json (contract 'primary_dob_input_status')}}},
        "value": {
          {{#if details.dateOfBirth}}
            "month": "{{month details.dateOfBirth}}",
            "day": "{{day details.dateOfBirth}}",
            "year": "{{year details.dateOfBirth}}"
          {{else}}
            "month": "",
            "day": "",
            "year": ""
          {{/if}}
        },
        "label": {
          "copy": "Date of birth"
        },
        "hint": "",
        "error": "{{{ ajv 'errors' 'questions/primary/dateOfBirth' details.dateOfBirth }}}"
    }
}
{{/with}}
{{else}}
{
    "statusCode": "401",
    "message": "Application Primary missing"
}
{{/if}}