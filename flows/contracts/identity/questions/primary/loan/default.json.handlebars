{{#with application}}
{
  "type": "input",
  "definition": {
      "key": "loanAmount",
      "type": "inputMoney",
      {{#if details.amount.requested}}
        "value": {{formatCentsToDollars details.amount.requested}},
      {{else}}
        "value": "",
      {{/if}}
      "label": {
        "copy": "Refinance amount"
      },
      "hint": "Your refinance amount must be greater than or equal to {{{ formatToUSCurrency (stateMinLoan primary.details.location) 'true' }}}"
  }
}
{{/with}}