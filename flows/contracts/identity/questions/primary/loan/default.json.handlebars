{{#with application}}
{
  "type": "input",
  "definition": {
      "key": "loanAmount",
      "type": "inputMoney",
      {{#if details.amount.requested}}
        "value": "{{{formatToUSCurrency details.amount.requested}}}",
      {{else}}
        "value": "",
      {{/if}}
      "status": {{{json (contract 'primary_loan_input_status')}}},
      "label": {
        "copy": "Refinance amount"
      },
      "error": "{{{ ajv 'errors' 'questions/primary/loan' details.amount.requested }}}",
      "hint": "Your refinance amount must be greater than or equal to '**state minimum amount**'"
  }
}
{{/with}}