{ 
    "type": "object",
    "properties": {
      "street": {
        "minLength": 1,
        "type": "string",
        "pattern": "^[a-zA-Z0-9\\s.'-]*$",
        "errorMessage": {
          "minLength": "Street is required",
          "pattern": "Invalid street"
        }
      },
      "apt": {
        "nullable": true,
        "type": "string",
        "pattern": "^[a-zA-Z0-9\\s.\\-#\\x00]*$",
        "errorMessage": {
          "pattern": "Invalid apartment"
        }
      },
      "city": {
        "minLength": 1,
        "type": "string",
        "pattern": "^[a-zA-Z\\s'-]*$",
        "errorMessage": {
          "minLength": "City is required",
          "pattern": "Invalid city"
        }
      },
      "state": {
        "type": "string",
        "enum": [
          "AL",
          "AK",
          "AZ",
          "AR",
          "CA",
          "CO",
          "CT",
          "DE",
          "DC",
          "FL",
          "GA",
          "HI",
          "ID",
          "IL",
          "IN",
          "IA",
          "KS",
          "KY",
          "LA",
          "ME",
          "MD",
          "MA",
          "MI",
          "MN",
          "MS",
          "MO",
          "MT",
          "NE",
          "NV",
          "NH",
          "NJ",
          "NM",
          "NY",
          "NC",
          "ND",
          "OH",
          "OK",
          "OR",
          "PA",
          "RI",
          "SC",
          "SD",
          "TN",
          "TX",
          "UT",
          "VT",
          "VA",
          "WA",
          "WV",
          "WI",
          "WY"
        ],
        "errorMessage": {
          "enum": "Invalid state"
        }
      },
      "zip": {
        "minLength": 5,
        "maxLength": 10,
        "pattern": "^\\b\\d{5}(-\\d{4})?\\b$",
        "type": "string",
        "errorMessage": {
          "minLength": "Zipcode is required",
          "pattern": "Invalid zipcode"
        }
      }
    },
    "required": ["street", "city", "state", "zip"]
}