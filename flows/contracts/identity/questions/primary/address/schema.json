{ 
    "type": "object",
    "properties": {
      "street": {
        "minLength": 1,
        "type": "string",
        "pattern": "^[\\x00-\\x7F]*$",
        "errorMessage": {
          "minLength": "Street is required",
          "pattern": "Invalid street"
        }
      },
      "apt": {
        "nullable": true,
        "type": "string",
        "pattern": "^[\\x00-\\x7F]*$",
        "errorMessage": {
          "pattern": "Invalid apartment"
        }
      },
      "city": {
        "minLength": 1,
        "type": "string",
        "pattern": "^[\\x00-\\x7F]*$",
        "errorMessage": {
          "minLength": "City is required",
          "pattern": "Invalid city"
        }
      },
      "state": {
        "minLength": 2,
        "maxLength": 2,
        "type": "string",
        "pattern": "^[\\x00-\\x7F]*$",
        "errorMessage": {
          "minLength": "State is required",
          "pattern": "Invalid state"
        }
      },
      "zip": {
        "minLength": 5,
        "maxLength": 10,
        "pattern": "^[\\x00-\\x7F]*$",
        "type": "string",
        "errorMessage": {
          "minLength": "Zipcode is required",
          "pattern": "Invalid zipcode"
        }
      }
    },
    "required": ["street", "city", "state", "zip"]
}
