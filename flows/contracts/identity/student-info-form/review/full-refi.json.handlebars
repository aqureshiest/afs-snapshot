{{#with application}}
{
    "key": "refi-review",
    "label": "Student Refi Review",
    "submit": {
        {{#if (and primary.details.decision ( ne tag.status 'incomplete' ))}}
            "copy": "Dashboard",
            "action": {{{ json (contract 'actionsDashboard') }}}
        {{else}}
            "copy": "Submit my application",
            "action": {
                "key": "submitInterstitial",
                "type": "interstitial",
                "properties": {
                    "showSpinner": true,
                    {{#if (and (eq tag.applicants 'cosigned') (eq (some (contract 'get-statuses') 'submitted') false))}}
                    {{!-- Don't show the header if this a cosigned application and no one has submitted their --}}
                    {{!-- portion of the application. Send the applicant to syllabus right away --}}
                    {{!-- Another check is defined in the 'actions' contract to check if we send to syllabus or --}}
                    {{!-- do full app submit --}}
                        "header": "",
                    {{else}}
                        "header": { "copy": "Weâ€™re reviewing your application. This can take up to a minute." },
                    {{/if}}
                    "action": {{{ json (contract 'actions') }}}
                }
            }
        {{/if}}
    },
    "back": {
        "action": {{{ json (contract 'back-button') }}}
    },
    "progress": 100,
    {{#if (and primary.details.financialAccounts (someSelected primary.details.financialAccounts))}}
        "rows":  {{{ json (contract 'student-info-review-rows')}}}
    {{else}}
        "rows":  {{{ json (contract 'student-info-review-noFinancialAccounts-rows')}}}
    {{/if}}
}
{{/with}}