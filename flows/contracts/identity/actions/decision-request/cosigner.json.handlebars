{
    "key": "decision-request",
    "type": "request",
    "properties": {
        "manifest": "decision/cosigner/decision-request/{{application.cosigner.id}}",
        "analytics": {
            "name": "Application Submitted",
            "product": "slr",
            "loan_type": "{{{mapLoanType application.tag.applicants}}}",
            "role": "{{{application.applicant.role}}}",
            "application_id": "{{{application.id}}}",
            "income_verification_method": {{{mapIncomeVerificationMethod application.cosigner.details.financialAccounts}}},
            "employment_type": "{{{mapIncomeTypeToEmplStatus application.cosigner.details.income}}}",
            "value": "{{{formatCentsToDollars (multiply application.details.amount.requested 0.55)}}}"{{!-- factor defined by DnA --}}
        },
        "method": "POST",
        "onError": {{{json (contract 'onError')}}}
    }
}