{
  "key": "decision-request",
  "type": "request",
  "properties": {
    "manifest": "decision/primary/decision-request/{{application.primary.id}}",
    "analytics": [{
      "name": "Application Submitted",
      "product": "slr",
      "loan_type": "{{{mapLoanType application.tag.applicants}}}",
      "role": "{{{application.applicant.role}}}",
      "application_id": "{{{application.id}}}",
      "income_verification_method": {{{mapIncomeVerificationMethod application.primary.details.financialAccounts}}},
      "employment_type": "{{{mapIncomeTypeToEmplStatus application.primary.details.income}}}",
      "value": "{{{formatCentsToDollars (multiply application.details.amount.requested 0.55)}}}"{{!-- factor defined by DnA --}}
    }{{#if (eq (mapLoanType application.tag.applicants) "independent")}},
    {
      "name": "Application Fully Submitted",
      "product": "slr",
      "loan_type": "{{{mapLoanType application.tag.applicants}}}",
      "role": "{{{application.applicant.role}}}",
      "application_id": "{{{application.id}}}",
      "primary_application_id": "{{{application.primary.id}}}"
      {{#if (eq (mapLoanType application.tag.applicants) "cosigned")}},
        "cosigner_application_id": "{{{application.cosigner.id}}}"
      {{/if}}
    }
    {{/if}}
    {{#if (and (eq (mapLoanType application.tag.applicants) "cosigned") (eq application.cosigner.status.name "submitted"))}},
    {
      "name": "Application Fully Submitted",
      "product": "slr",
      "loan_type": "{{{mapLoanType application.tag.applicants}}}",
      "role": "{{{application.applicant.role}}}",
      "application_id": "{{{application.id}}}",
      "primary_application_id": "{{{application.primary.id}}}",
      "cosigner_application_id": "{{{application.cosigner.id}}}"
    }
    {{/if}}
    ],
    "method": "POST",
    "onError": {{{json (contract 'onError')}}}
  }
}