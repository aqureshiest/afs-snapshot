{
    "key": "decision-request",
    "type": "request",
    "properties": {
        "manifest": "decision/decision-request/{{application.id}}",
        "analytics": {
            "name": "Application Submitted",
            "product": "slr",
            "loan_type": "{{{mapLoanType application.tag.applicants}}}",
            "application_id": "{{{application.id}}}"
        },
        "method": "POST",
        "onError": [{
            "codes": ["unathorized"],
            "action": {
                "key": "unauthorized-error",
                "type": "navigate",
                "properties": {
                    "goTo": "{{env.BASE_URL}}/_/auth/login?targetUrl=/_/apply/resume/{{request.params.id}}"
                }
            }
        }]
    }
}