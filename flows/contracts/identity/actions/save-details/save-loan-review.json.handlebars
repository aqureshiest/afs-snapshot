{{! redirect to review}}
{
    "key": "save-root-loan-details",
    "type": "request",
    "properties": {
        "manifest": "save-details/save-review/{{application.id}}",
        "method": "POST",
        "onError": [{
            "codes": ["unauthorized"],
            "action": {
                "key": "unauthorized-error",
                "type": "navigate",
                "properties": {
                    "goTo": "{{env.BASE_URL}}/_/auth/login?targetUrl=/_/apply/resume/{{request.params.id}}",
                    "external": true
                }
            }
        }]
    }
}