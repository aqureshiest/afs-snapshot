{
    "key": "save-details",
    "type": "request",
    "properties": {
        "analytics": {
            "name": "Application Section Submitted",
            "product": "slr",
            "section": "primary info",
            "loan_type": "{{{mapLoanType application.tag.applicants}}}",
            "role": "{{{application.applicant.role}}}",
            "conditional": [
                [
                    {
                        "field": "currentAddress.sixMonthResidence",
                        "op": "valueEquals",
                        "value": "false"
                    }
                ] 
            ]
        },
        "manifest": "save-details/{{application.primary.id}}",
        "method": "POST",
        "onError": {{{json (contract 'onError')}}}
    }
}