{{#with application.primary}}
{
    "type": "info",
    "definition": {
        "key": "educationReview",
        "type": "infoReview",
        "label": "Academic Info",
        "items":
            {{#list}}
                {"id": "schoolName", "label": "College or school name", "value": "{{contract 'getSchools'}}"}
                {"id": "highestDegree", "label": "Highest degree", "value": "{{findInArray (json (contract 'getDegrees')) 'id' details.education.0.degree 'label'}}"}
                {"id": "gradDate", "label": "Graduation date", "value": "{{reviewDateFormatter details.education.0.graduationDate}}"}
            {{/list}},
        "editAction": {
            "key": "",
            "type": "navigate",
            "properties": {
                "analytics": {},
                "goTo": "earnest/student-loan-refi/edit/education-info/{{id}}"
            }
        }
    }
}
{{/with}}