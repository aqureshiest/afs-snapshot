{{#with application.primary}}
{
    "type": "info",
    "definition": {
        "key": "educationReview",
        "type": "infoReview",
        "label": "Academic Info",
        "items":
            {{#list}}
                {"id": "schoolName", "label": "College or school name", "value": "{{contract 'getSchools'}}"}
                {"id": "highestDegree", "label": "Highest degree", "value": "{{findInArray (json (contract 'getDegrees')) 'id' details.education.0.degree 'label'}}"}
                {"id": "gradDate", "label": "Graduation date", "value": "{{reviewDateFormatter details.education.0.graduationDate}}"}
            {{/list}},
        "editAction": {
            "key": "",
            "type": "navigate",
            "properties": {
                "analytics": {
                    "name": "Action Clicked",
                    "action": "edit academic info",
                    "title": "Review",
                    "product": "{{{mapProduct ../application.reference.product}}}",
                    "loan_type": "{{{mapLoanType ../application.tag.applicants}}}",
                    "role": "{{{../application.applicant.role}}}"
                },
                "goTo": "earnest/student-refi/edit/education-info/{{id}}"
            }
        }
    }
}
{{/with}}