{{#with application.primary}}
{
  "type": "info",
  "definition": {
    "key": "employmentInfoReview",
    "type": "infoReview",
    "label": "Employment Info",
    "items":
    {{#list}}
        {{#if ../userState.employmentType}}
          {"id": "employmentStatus", "label": "Employment Status", "value": "{{toNeutralizeAndUpper ../userState.employmentType}}"}
        {{else if details.income.0.type}}
          {"id": "employmentStatus", "label": "Employment Status", "value": "{{{toNeutralizeAndUpper ( mapIncomeTypeToEmplStatus details.income.[0] )}}}"}
        {{/if}}
        {{#if details.income.0.employer}}
          {"id": "employerName", "label": "Employer name", "value": "{{details.income.0.employer}}"}
        {{/if}}
        {{#if details.income.0.title}}
          {"id": "jobTitle", "label": "Job Title", "value": "{{details.income.0.title}}"}
        {{/if}}
        {{#if details.income.0.start}}
          {"id": "startDate", "label": "Start Date", "value": "{{reviewDateFormatter details.income.0.start}}"}
        {{/if}}
        {{#if (or (eq ../userState.employmentType 'retired') (eq 'retired' ( mapIncomeTypeToEmplStatus details.income.[0] )))}}
          {"id": "annualIncome", "label": "Annual Income before taxes", "value": "{{formatToUSCurrency 0}}"}
        {{else if details.income.0.amount}}
          {{#if (and (ne ../userState.employmentType 'unemployed') (ne 'unemployed' ( mapIncomeTypeToEmplStatus details.income.[0] )))}}
            {"id": "annualIncome", "label": "Annual Income before taxes", "value": "{{formatToUSCurrency details.income.0.amount}}"}
          {{/if}}
        {{/if}}
        {{#if details.asset.0.amount}}
          {"id": "asset", "label": "Cash + retirement + investments", "value": "{{formatToUSCurrency details.asset.0.amount}}"}
        {{/if}}
        {{#if (or (eq ../userState.employmentType 'retired') (eq 'retired' ( mapIncomeTypeToEmplStatus details.income.[0] )))}}
          {"id": "additionalIncome", "label": "Additional Income", "value": "{{formatToUSCurrency (sumIncomeAmountRange details.income 'amount' 0 4)}}"}
        {{else if (or details.income.[1] details.income.[2] details.income.[3] details.income.[4] details.income.[5])}}
          {"id": "additionalIncome", "label": "Additional Income", "value": "{{formatToUSCurrency (sumIncomeAmountRange details.income 'amount' 1 5)}}"}
        {{/if}}
    {{/list}},
    "editAction": {
        "key": "",
        "type": "navigate",
        "properties": {
           "analytics": {
                "name": "Action clicked",
                "action": "edit employment info",
                "product": "{{{mapProduct ../application.reference.product}}}",
                "loan_type": "{{{mapLoanType ../application.tag.applicants}}}"
            },
            "goTo": "earnest/student-refi/edit/employment-info/{{id}}"
        }
    }
  }
}
{{/with}}