{{#if request.params.id}}
  {
    "event": "addDetails",
    "payload": {
      "id": "{{request.params.id}}",
      {{log request.body.values}}
      {{#with request.body.values}}
      "details": 
        {{#obj}} {{! make sure to flatten each element into a single line}}
          {{#if name}}
            {"name": {{{json name}}} }
          {{/if}}
          {{#if email}}
            {"email": "{{email}}"}
          {{/if}}
          {{#if phone}}
            {"phone": [{"number": "{{phone}}", "type": "mobile"}]}
          {{/if}}
          {{#if location }}
            {"location": [{"index": 0, "street1": "{{location.street1}}", "street2": "{{location.street2}}", "city": "{{location.city}}", "state": "{{location.state}}", "zip": "{{location.zip}}" , "type": "primary" {{#if citizenship}} , "citizenship": "{{citizenship}}" {{/if}} }]}
          {{/if}}
          {{#if previousAddress }} 
            {"location": [{"index": 1, "street1": "{{previousAddress.street1}}", "street2": "{{previousAddress.street2}}", "city": "{{previousAddress.city}}", "state": "{{previousAddress.state}}", "zip": "{{previousAddress.zip}}" , "type": "previous" {{#if citizenship}} , "citizenship": "{{citizenship}}" {{/if}} }]}
          {{/if}}
          {{#if employmentType }}
            {"income": [{"index": 0, "type": "{{employmentType}}"}]}
          {{/if}}
          {{#if employerName}}
             {"income": [{"index": 0, "employer": "{{employerName}}", "title": "{{jobTitle}}", "amount": {{{number annualIncome}}} }]}
          {{/if}}
        {{/obj}}
    },
    {{/with}}
    "fields": "application { id }"
  }
{{else}}
  null
{{/if}}