{{#if request.params.id}}
  {
    "event": "addDetails",
    "payload": {
      "id": "{{request.params.id}}",
      {{#with request.body.values}}
      "details": 
        {{#obj}} {{! make sure to flatten each element into a single line}}
          {{#if dateOfBirth}} 
            {"dateOfBirth": "{{dateOfBirth.year}}-{{dateOfBirth.month}}-{{dateOfBirth.day}}"}
          {{/if}}
          {{#if name}}
            {"name": {{{json name}}} }
          {{/if}}
          {{#if email}}
            {"email": "{{email}}"}
          {{/if}}
          {{#if phone}}
            {"phone": [{"number": "{{phone}}", "type": "mobile"}]}
          {{/if}}
          {{#if currentAddress }}
            {"location": [{"index": 0, "street1": "{{currentAddress.street1}}", "street2": "{{currentAddress.street2}}", "city": "{{currentAddress.city}}", "state": "{{currentAddress.state}}", "zip": "{{currentAddress.zip}}" , "type": "primary" {{#if citizenship}} , "citizenship": "{{citizenship}}" {{/if}} }]}
          {{/if}}
          {{#if previousAddress }} 
            {"location": [{"index": 1, "street1": "{{previousAddress.street1}}", "street2": "{{previousAddress.street2}}", "city": "{{previousAddress.city}}", "state": "{{previousAddress.state}}", "zip": "{{previousAddress.zip}}" , "type": "previous" {{#if citizenship}} , "citizenship": "{{citizenship}}" {{/if}} }]}
          {{/if}}
          {{#if employmentType }}
              {"income": [{"index": 0, "type": "{{{employmentStatus employmentType}}}"}]}
          {{/if}}
          {{#if jobTitle}}
              {"income": [{"index": 0, "title": "{{jobTitle}}", "amount": {{{number annualIncome}}} {{#if employerName}}, "employer": "{{employerName}}" {{/if}} {{#if startDate}}, "start": "{{startDate.year}}-{{startDate.month}}-{{startDate.day}}" {{/if}} }]}
          {{/if}}
          {{#if claimedAssets}}
            {"asset": [{"index": 0, "type": "claimed_total_assets", "amount": {{{number claimedAssets}}} }]}
          {{/if}}
          {{#if additionalAmount}}
            {"income": [{"index": 1, "amount": {{{number additionalAmount}}} }]}
          {{/if}}
          {{#if sourcesOfIncome}}
            {"income": [{"index": 1, "type": "{{sourcesOfIncome}}" }]}
          {{/if}}
          {{#if financialAccounts}}
            {"financialAccounts": {{{json financialAccounts}}} }
          {{/if}}
        {{/obj}}
    },
    {{/with}}
    "fields": "application { id }"
  }
{{else}}
  null
{{/if}}