{{#if (and
  auth.artifacts.userId
  auth.artifacts.verified
  (hasActiveIncompleteApplication (lookup (getApplicantByEmail auth.artifacts.email application) "id") applications)
)}}
  {
    "event": "setStatus",
    "rehydrate": false,
    "payload": {
      "status": "withdrawn",
      "id": "{{ lookup (lookup (hasActiveIncompleteApplication (lookup (getApplicantByEmail auth.artifacts.email application) "id") applications) "root") "id" }}"
    },
    "fields": "application { id }"
  }
{{else}}
  {}
{{/if}}
