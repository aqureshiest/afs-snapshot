{{#if request.params.id}}
{{#noop}}{{ contract 'analytics' }}{{/noop}}
  {
    "event": "setStatus",
    "payload": {
      "id": "{{request.params.id}}",
      {{#with request.body}}
      "status": 
      {{#if (eq decisionOutcome 'Approved'}}
        "approved"
      {{else if (eq decisionOutcome 'Denied')}}
        "declined"
      {{else if (eq decisionOutcome 'Application Review')}}
        "review"
      {{/if}}
    },
    {{/with}}
    "fields": "application { id }"
  }
{{else}}
  null
{{/if}}