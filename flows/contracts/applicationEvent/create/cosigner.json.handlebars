{{log "cosigner.json" application}}
{{#if application.root.id}}
  {{#with request.body}}
    {{#if (eq values.loanType "cosigned")}}
      {
        "event": "createApplication",
        "fields": ["application.id", "application.root.id"],
        "payload": {
          "relationships": [{
            "as": "cosigner",
            "to": "{{ application.id }}"
          },
          {
            "as": "applicant",
            "to": "{{ application.root.id }}"
          }]
        }
      }
    {{else}}
      null
    {{/if}}
  {{/with}}
{{else}}
   null
{{/if}}