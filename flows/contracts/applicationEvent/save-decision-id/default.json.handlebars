{
  "action": "save-decision",
  "event": "create",
  "payload": {
    {{!  TODO: For rate-checks, determine to which applicant the decision needs to be saved}}
    "id": {{{ json @ref.application.primary.id }}},
    "application": {
      "details": {{#obj}}
          {{#multiline}}
            {
              "decision": [
                {{#with @ref.decision.results.data as |decisionData|}}
                  {
                    "decisionID": {{{ json decisionData.decisioningToken }}},
                    "expiresAt": {{{ json decisionData.expirationDate }}},
                    "type": "rate-check"
                  }
                {{/with}}
              ]
            }
          {{/multiline}}
      {{/obj}}
    }
  }
}
