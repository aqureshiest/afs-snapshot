{{#if request.params.id}}
  {{#with request.body.values}}
    {
      {{#if (or currentAddress employmentType annualIncome financialAccounts addAddtionalIncome) }}
        "type": "track",
      {{else}}
        "type": "",
      {{/if}}
      "payload": {
        {{#if currentAddress }}
          "section": "primary-info",
        {{else if employmentType }}
          "section": "employment type",
          "employment_type": "{{employmentType}}",
        {{else if (or annualIncome addAddtionalIncome)}}
          "section": "income",
        {{else if financialAccounts}}
          "section": "income",
          "income_verification_method": "{{financialAccounts.[0].type}}",
        {{/if}}
        "event": "Server Application Section Submitted"
      }
    }
  {{/with}}
{{/if}}