{{#if request.params.id}}
{
  "type": "view",
  "label": "income verification",
  "pageLayout":{{{json (contract 'pageLayout')}}},
  "seo": {
      "pageTitle": "Student Loan Refinance Application - Earnest"
  },
  "analytics": {
      "product": "{{{mapProduct application.reference.product}}}",
      "loan_type": "{{{mapLoanType application.tag.applicants}}}",
      "name": "Income Verification",
      "title": "Verification Method Selection"
  },
  "definition": {
    "type": "bankAccounts",
    "definition": {
      "progress": 90,
      "key": "bankAccounts",
      "analyticsEvents": {
        "plaidOpened": {
          "name": "Modal Loaded",
          "modal": "income verification",
          "income_verification_method": "plaid",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        },
        "plaidClosed": {
          "name": "Modal Dismissed",
          "modal": "income verification",
          "income_verification_method": "plaid",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        },
        "plaidSubmitted": {
          "name": "Modal Completed",
          "modal": "income verification",
          "income_verification_method": "plaid",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        },
        "manualOpened": {
          "name": "Modal Loaded",
          "modal": "income verification",
          "income_verification_method": "manual",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        },
        "manualClosed": {
          "name": "Modal Dismissed",
          "modal": "income verification",
          "income_verification_method": "manual",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        },
        "manualSubmitted": {
          "name": "Modal Completed",
          "modal": "income verification",
          "income_verification_method": "manual",
          "loan_type": "{{{mapLoanType application.tag.applicants}}}"
        }
      },
      "header": {
        "copy": "Let's verify your income.",
        "subCopy": "Link the account(s) where your paycheck is deposited for accurate eligibility and rates assessment."
      },
      "list": {
          "type": "ul",
          "defaultIcon": {
              "type": "NucleusIcon",
              "name": "CheckmarkCircleFilledIcon"
          },
          "items": [
              {
                  "copy": "Speeds up loan approval by up to 3 days"
              },
              {
                  "copy": "Personal information secured with end-to-end encryption"
              }
          ]
      },
      "disclosure": "`{\"component\":\"ActionButton\",\"props\":{\"button\":{\"copy\":\"How does income verification work?\",\"action\":{\"type\":\"modal\",\"properties\":{\"type\":\"disclosure\",\"definition\":{\"copy\":\"## How does income verification work?\\n\\nEarnest verifies your income by analyzing your direct deposits from your employer. We'll use your income verification to calculate repayment eligibility.\\n\\nEarnest uses plaid as a trusted partner to connect your external accounts. Any bank account data provided is encrypted and follows our Privacy Policy.\"}}}},\"styleAsLink\":true}}`",
      "plaidOptions": {
        "linkToken": {{{ json (contract 'method' )}}},
        "exchangeUrl": "plaid/exchange/{{{request.params.id}}}",
        "onError": [
          {
            "codes": ["loan-accounts-error"],
            "action" :{
              "key": "loan-accounts-error-toast",
              "type": "error",
              "properties": {
                "type": "toast",
                "definition": {
                  "message": "Please select Savings or Checking accounts.",
                  "icon": "WarningIcon" 
                }
              }
            }
          },
          {
            "codes": ["application-service-error"],
            "action":{
              "key": "application-service-error-toast",
              "type": "error",
              "properties": {
                "type": "toast",
                "definition": {
                  "message": "An error ocurred while saving this, please try again.",
                  "icon": "WarningIcon" 
                }
              }
            }
          }
        ]
      },
      "backAction": {{{ json (contract 'back-button') }}},
      "primaryAction": {
        "copy": "Move to review",
        "action": {
          "key": "landingViewed",
          "type": "request",
          "properties": {
            "analytics": {
                "name": "Application Section Submitted",
                "product": "slr",
                "title": "income verification",
                "loan_type": "{{{mapLoanType application.tag.applicants}}}",
                "serverProperties": {
                  "fields": [
                    "income_verification_method"
                  ]
                }
            },
            "onError": {
              "codes": ["application-service-error"],
              "action":{
                "key": "application-service-error-toast",
                "type": "error",
                "properties": {
                  "type": "toast",
                  "definition": {
                    "message": "An error ocurred while saving this, please try again.",
                    "icon": "WarningIcon" 
                  }
                }
              }
            },
            "manifest": "save-details/financials/{{{request.params.id}}}"
          }
        }
      },
      "financialAccounts":
      {{#list}}
        {{#each application.primary.details.financialAccounts}}
          {"index": {{{ number @index}}}, "name": "{{this.name}}", "account_last4": "{{this.account_last4}}", "type": "{{this.type}}", "selected": {{json this.selected}} }
        {{/each}}
      {{/list}}
    }
  }
}
{{else}}
{
  "statusCode": 401,
  "message": "Id param is required."
}
{{/if}}