{
  "type": "view",
  "label": "full-refi-primer",
  "onLoadEvent": {},
  "seo": {
    "pageTitle": "Earnest"
  },
  "pageLayout": {{{json (contract 'layout')}}},
  "analytics": {
    "name": "Primer Screen",
    "product": "slr",
    "role": "cosigner",
    "loan_type": "{{{mapLoanType application.tag.applicants}}}",
    "source": "rate check",
    "application_id": "{{{application.id}}}",
    "primary_application_id": "{{{application.primary.id}}}",
    "cosigner_application_id": "{{{application.cosigner.id}}}"
  },
  "definition": {
    "type": "landing",
    "definition": {
      "key": "landing",
      "progress": {{{json (contract 'progress')}}},
      "content": [
          {
              "key": "header1",
              "type": "header",
              "componentProps": {
                  "copy": "You’ve been invited by {{application.primary.details.name.first}} to be a cosigner."
              }
          },
          {
              "key": "list1",
              "type": "list",
              "componentProps": {
                  "type": "ul",
                  "defaultIcon": {
                      "type": "NucleusIcon",
                      "name": "CheckmarkCircleFilledIcon",
                      "fill": "#00DA6C"
                  },
                  "className": "dark",
                  "items": [
                      {
                          "copy": "Get rates w/o affecting credit score"
                      },
                      {
                          "copy": "Automatically saves your input"
                      },
                      {
                          "copy": "Zero fees"
                      },
                      {
                          "copy": "Flexible payment options"
                      },
                      {
                          "copy": "1:1 assistance if you need help"
                      }
                  ]
              }
          },
          {
              "key": "divider1",
              "type": "divider",
              "componentProps": {}
          },
          {
              "key": "subheader1",
              "type": "md",
                "componentProps": {
                    "content": ":Heading[Here’s what you may expect: :props[{marginBottom: '20px', fontSize: '20px', fontWeight: 400, display: 'block'}]]"
                }
          },
          {
              "key": "loanDetails",
              "type": "row",
              "componentProps": {
                  "stackOnMobile": true,
                  "content": [
                      {
                          "key": "loanDetails1",
                          "type": "callout",
                          "componentProps": {
                              "content": [
                                  {
                                      "key": "loanDetails2",
                                      "type": "md",
                                      "componentProps": {
                                          "content": ":Heading[Loan details requested] \n\n Primary requested an estimated amount to refinance \n\n ${{formatCentsToDollars application.details.amount.requested}}"
                                      }
                                  }
                              ]
                          }
                      }
                  ]
              }
          },
          {
              "key": "list2",
              "type": "list",
              "componentProps": {
                  "type": "ol",
                  "variant": "stepper",
                  "items": [
                      {
                          "copy": ":Heading[Get personalized rate estimates] \n\n Provide basic details about yourself \n Soft credit check: no impact on your credit"
                      },
                      {
                          "copy": ":Heading[Apply for your loan] \n\n Verify income and employment \n Hard credit inquiry for final rates and terms"
                      },
                      {
                          "copy": ":Heading[Customize your plan and sign] \n\n Zero pre-payment fees \n Choose your own monthly payment \n Option to enroll in autopay"
                      }
                  ]
              }
          },
          {
              "key": "divider2",
              "type": "divider",
              "componentProps": {}
          },
          {
              "key": "socialProof",
              "type": "row",
              "componentProps": {
                  "stackOnMobile": true,
                  "content": [
                      {
                          "key": "socialProofCo1",
                          "type": "callout",
                          "componentProps": {
                              "content": [
                                  {
                                      "key": "socialProofmd1",
                                      "type": "md",
                                      "componentProps": {
                                          "content": ":Heading[900+] \n\n Universities trust us"
                                      }
                                  }
                              ]
                          }
                      },
                      {
                          "key": "socialProofCo2",
                          "type": "callout",
                          "componentProps": {
                              "content": [
                                  {
                                      "key": "socialProofmd2",
                                      "type": "md",
                                      "componentProps": {
                                          "content": ":Heading[236,000+] \n\n Happy clients earned"
                                      }
                                  }
                              ]
                          }
                      }
                  ]
              }
          },
          {
              "key": "trustpilot",
              "type": "trustPilot",
              "componentProps": {
                "stars": 4.5,
                "header": "4.7/5 Trustpilot Rating",
                "label": {
                    "copy": "6,500+ reviews",
                    "subCopy": "Excellent"
                }
              }
          }
      ],
      "bottomNavigation": {
          "buttons": [
              {
                "copy": "Get Your Rates",
                "action": {
                    "key": "cosigner-basic-info-request",
                    "type": "navigate",
                    "properties": {
                        "goTo" : "earnest/student-loan-refi/cosigner/basic-info/{{application.cosigner.id}}",
                        "analytics": {
                          "name": "Rate Check Started",
                          "product": "slr",
                          "role": "cosigner",
                          "source": "rate check",
                          "loan_type": "cosigned",
                          "application_id": "{{{application.id}}}",
                          "primary_application_id": "{{{application.primary.id}}}",
                          "cosigner_application_id": "{{{application.cosigner.id}}}"
                        }
                    }
                }
              }
          ]
      }
    }
  }
}