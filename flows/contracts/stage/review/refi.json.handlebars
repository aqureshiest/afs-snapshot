{

    "key": "review-stage",
    "type": "form",
    "status": "notStarted",
    "pageLayout":{{{json (contract 'pageLayout')}}},
    {{#if (contract "analytics")}}
    "analytics":{{{json (contract 'analytics')}}},
    {{else}}
    "analytics": {
        "product": "{{{mapProduct application.reference.product}}}",
        "loan_type": "{{{mapLoanType application.tag.applicants}}}",
        "name": "Application Review",
        "title": "Review"
    },
    {{/if}}
    "steps": {{{json (contract 'steps')}}},
    "backAction": {{{ json (contract 'back-button') }}},
    "validation": {
        "type": "object",
        "properties": {
            "refi-review": {
                "type": "object",
                "properties": {
                    "consent": {
                        "type": "boolean",
                        "minLength": 1,
                        "const": true,
                        "errorMessage": {
                            "minLength": "To continue you must agree",
                            "const": "To continue you must agree",
                            "type": "To continue you must agree"
                        }
                    },
                    {{#if (contract 'intent')}}
                      "intent": {
                          "type": "boolean",
                          "minLength": 1,
                          "const": true,
                          "errorMessage": {
                              "minLength": "To continue you must agree",
                              "const": "To continue you must agree",
                              "type": "To continue you must agree"
                          }
                      },
                    {{/if}}
                    "disclosure": {
                        "type": "boolean",
                        "minLength": 1,
                        "const": true,
                        "errorMessage": {
                            "minLength": "To continue you must agree",
                            "const": "To continue you must agree",
                            "type": "To continue you must agree"
                        }
                    }
                }
            }
        },
        "required": [],
        "additionalProperties": true
    }
}
