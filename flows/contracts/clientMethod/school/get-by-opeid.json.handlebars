{{#with (lookup @ref.application @ref.role)}}
  {{#if details.education.[0].opeid}}
    {
      "action": "getSchools",
      "client": "accreditedSchoolService",
      "method": "get",
      "uri": "/schools",
      "query": {
	"opeid": {{{json details.education.[0].opeid}}}
      }
    }
  {{else}}
    null
  {{/if}}
{{else}}
  null
{{/with}}
