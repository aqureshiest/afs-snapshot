{
  "action": {{{json (contract 'action')}}},
  "client": "lendingDecisionServiceClient",
  "required": true,
  "method": "post",
  "uri": "/v2/decisioning-request/{{
    coalesce application.reference.product 'slr'
  }}/{{
    coalesce (contract 'decisionType') 'rate-check'
  }}",
  "headers": {
    "Content-Type": "application/json",
    "Authorization": "Bearer {{env.S2S_KEY_LDS_APPLY_FLOW_SERVICE}}"
  },
  "body": {{#obj}}
    {{{ json (contract 'basics') }}}
    {{{ json (contract 'appInfo') }}}
  {{/obj}}
}
