{
  "action": "generate-link-token",
  "client": "plaid",
  "method": "post",
  "uri": "/link/token/create",
  "body": {
    "user": {
      "client_user_id": "{{{auth.artifacts.userId}}}"
    },
    "client_name": "Earnest",
    "products": ["assets"],
    "country_codes": ["US"],
    "language": "en",
    "account_filters": {
      "depository": {
        "account_subtypes": ["checking", "savings"]
      }
    },
    "client_id": {{{json env.PLAID_CLIENT_ID}}},
    "secret": {{{json env.PLAID_SECRET}}}
  },
  "headers": {
    "Content-Type": "application/json",
    "Plaid-Version": "2020-09-14"
  }
}