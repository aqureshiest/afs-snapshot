{{!

  TODO: it would be nice if the contract template-helper was able to
  conditionally withold results if `isIncomplete` is true. This might make it
  easier to prevent evaluative contracts from propagating up their own internal
  instructions
}}
{{#with application as | application |}}
  {{#with (contract 'actions' (sum @index -1)) as | decision |}}
    {{#if (and decision.data application.monolithLoanID)}}
      {
        "action": "decision-backfill",
        "client": "internalRestServiceClient",
        "method": "POST",
        "uri": "/apply-flow-service/lending-decisioning",
        "body": {
          "loan_id": {{{json application.monolithLoanID}}}
          {{#spread}}
            {
              "journey_application_token": {{{json decision.data.journeyApplicationToken}}},
              "journey_token": {{{json decision.data.journeyToken}}},
              "status": {{{json decision.data.status}}}
            }
          {{/spread}}
        }
      }
    {{else}}
      null
    {{/if}}
  {{else}}
    null
  {{/with}}
{{ else }}
  null
{{/with}}
