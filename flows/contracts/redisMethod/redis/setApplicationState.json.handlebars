{{#if (and application.id (eq request.body.values.type "page"))}}
  {
    "redisMethod": "setApplicationState",
    "key": "{{{application.id}}}",
    "value": {
      {{#if request.body.flow.manifest}}
        "manifest": "{{{request.body.flow.manifest}}}/{{application.id}}",
      {{/if}}
        "step": {{{json request.body.flow.step}}}
  }
  {{else}}
    {}
{{/if}}